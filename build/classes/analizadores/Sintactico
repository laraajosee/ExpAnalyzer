package analizadores; 
import java_cup.runtime.*;

parser code 
{:
    /**
     * Método al que se llama automáticamente ante algún error sintactico.
     **/ 
    public void syntax_error(Symbol s){ 
        System.out.println("Error Sintáctico en la Línea " + (s.left) +
        " Columna "+s.right+ ". No se esperaba este componente: " +s.value+"."); 
    } 

    /**
     * Método al que se llama automáticamente ante algún error sintáctico 
     * en el que ya no es posible una recuperación de errores.
     **/ 
    public void unrecovered_syntax_error(Symbol s) throws java.lang.Exception{ 
        System.out.println("Error síntactico irrecuperable en la Línea " + 
        (s.left)+ " Columna "+s.right+". Componente " + s.value + 
        " no reconocido."); 
    }  
:} 

terminal String PTCOMA,PARIZQ,PARDER,CORIZQ,CORDER,LLAVEABIERTA,LLAVECERRADA;
terminal String MAS,MENOS,ASTERISCO,DIVIDIDO;
terminal String ENTERO;
terminal String DECIMAL;
terminal String UMENOS, DISY, PLUS, MARK, CONJMIN, CONMAY, CONNUM, NUMEROS, LETRAS, SIMBOLO;
terminal String REVALUAR, CONJ, DOSPUNTOS, IDENTIFICADOR,FLECHA, CONCA, STAR, PUNTO;

non terminal ini;
non terminal instrucciones;
non terminal instruccion, conjuntos, notacion,expresionesRegulares, regular;
non terminal Double expresion;


start with ini; 

ini::= instrucciones;

instrucciones ::= 
    LLAVEABIERTA conjuntos expresionesRegulares LLAVECERRADA {:System.out.println("ANALISIS SINTACTICO EXITOSO \n *****************" );:}
;
conjuntos::= CONJ DOSPUNTOS IDENTIFICADOR FLECHA notacion PTCOMA
            |CONJ DOSPUNTOS IDENTIFICADOR FLECHA notacion PTCOMA conjuntos
;

notacion::= CONCA
           | DISY
           | STAR
           | PLUS
           | MARK
           | CONJMIN
           | CONMAY
           | CONNUM
           | NUMEROS
           | LETRAS
           | SIMBOLO
 ;

expresionesRegulares ::= IDENTIFICADOR FLECHA PUNTO regular PTCOMA
           | IDENTIFICADOR FLECHA PUNTO regular PTCOMA expresionesRegulares
;

regular ::=  LLAVEABIERTA IDENTIFICADOR LLAVECERRADA regular
           | LLAVEABIERTA IDENTIFICADOR LLAVECERRADA
           | LLAVEABIERTA IDENTIFICADOR LLAVECERRADA ASTERISCO
           | LLAVEABIERTA IDENTIFICADOR LLAVECERRADA ASTERISCO regular
;