package analizadores; 
import java_cup.runtime.*;

parser code 
{:
    /**
     * Método al que se llama automáticamente ante algún error sintactico.
     **/ 
    public void syntax_error(Symbol s){ 
        System.out.println("Error Sintáctico en la Línea " + (s.left) +
        " Columna "+s.right+ ". No se esperaba este componente: " +s.value+"."); 
    } 

    /**
     * Método al que se llama automáticamente ante algún error sintáctico 
     * en el que ya no es posible una recuperación de errores.
     **/ 
    public void unrecovered_syntax_error(Symbol s) throws java.lang.Exception{ 
        System.out.println("Error síntactico irrecuperable en la Línea " + 
        (s.left)+ " Columna "+s.right+". Componente " + s.value + 
        " no reconocido."); 
    } 

     String palabra = "";
:} 

terminal String LLAVEABIERTA, CONJ, LETRA, DOSPUNTOS, GUION, MAYORQUE, PUNTOCOMA, TILDE, NUMERO, MINUSCULA, MAYUSCULA, COMA;
terminal String PUNTO, ASTERISCO, OR,INTERROGACION, MAS , SIMBOLOS;

non terminal ini, instrucciones, conjuntos, palabra, notacion, cadena;




start with ini; 

ini::= instrucciones;

instrucciones ::= 
     LLAVEABIERTA conjuntos {:System.out.println("ANALISIS  EXITOSO \n *********************************************" );:}
;

conjuntos ::= CONJ DOSPUNTOS palabra GUION MAYORQUE notacion PUNTOCOMA
              |CONJ DOSPUNTOS palabra GUION MAYORQUE notacion PUNTOCOMA conjuntos
;

palabra ::=  LETRA palabra
            |LETRA
;

notacion ::=  NUMERO COMA notacion
              |NUMERO
              |LETRA COMA notacion
              |LETRA
              |LETRA TILDE LETRA
              |NUMERO TILDE NUMERO
              |SIMBOLOS TILDE SIMBOLOS
;


